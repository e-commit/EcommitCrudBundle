{% set ajax_options = ajax_options|merge({ 'before': 'processCrudDisplayConfig_'~suffix~'();' }) %}
{% set reset_ajax_options = ajax_options|merge({ 'before': 'reset_display_config_'~suffix~'();' }) %}

<div id="display_config_{{ suffix }}" class="crud_modal" style="width: 500px; text-align: left;">
<div class="contentWrap">
    <div class="titre">{% trans %}Display Settings{% endtrans %}</div>
    {{ jQuery_ajax_form(url, ajax_options)  }}
        <b>{{ form_label(form.npp) }} :</b><br />
        {{ form_widget(form.npp) }}<br /><br />
        
        <b>{{ form_label(form.displayed_columns) }} :</b><br />
         {% for choice, child in form.displayed_columns %}
                {{ form_widget(child) }}  {{ form_label(child) }}<br />
         {% endfor %}
        {{ form_rest(form) }}

        <div style="text-align: center;">
            <input type="submit" class="save" value="{% trans %}Save{% endtrans %}" />
            {{ jQuery_ajax_button('reset_display_settings'|trans, reset_settings_url, reset_ajax_options, {'class': 'raz'}) }}
        </div>
    </form>
</div>
</div>

<script type="text/javascript">
    var dialog_display_config_{{ suffix }} = $('#display_config_{{ suffix }}').overlay({oneInstance: false, api: true});
    function processCrudDisplayConfig_{{ suffix }}()
    {
       if($('#display_config_{{ suffix }} input:checkbox:checked').length < 1)
       {
            alert('{% trans %}You need to select at least one column to display{% endtrans %}');
            return false;
       }
       dialog_display_config_{{ suffix }}.close();
    }
    function change_display_config_{{ suffix }}()
    {
        dialog_display_config_{{ suffix }}.load();
    }
    function reset_display_config_{{ suffix }}()
    {
        $('#{{ form.npp.vars.id }}').val({{ default_npp }});
        {% for choice, child in form.displayed_columns %}
            {% if child.vars.value in default_columns %}
                $('#{{ child.vars.id }}').attr('checked', true);
            {% else %}
                $('#{{ child.vars.id }}').attr('checked', false);
            {% endif %}
        {% endfor %}
        dialog_display_config_{{ suffix }}.close();
    }
</script>

<a href="#" onclick="change_display_config_{{ suffix }}(); return false;"><img src="{{ asset(image_url) }}" alt="{% trans %}Display Settings{% endtrans %}" title="{% trans %}Display Settings{% endtrans %}" /></a>
<div id="js_holder_for_multi_update_{{ suffix }}" style="display: none;"></div>