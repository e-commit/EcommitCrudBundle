<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ecommit_crud.factory" class="Ecommit\CrudBundle\Crud\CrudFactory">
            <argument type="service" id="router"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="doctrine" on-invalid="null" />
            <argument type="service" id="security.token_storage"/>
            <argument>%ecommit_crud.template_configuration%</argument>
        </service>

        <service id="ecommit_crud.helper" class="Ecommit\CrudBundle\Helper\CrudHelper">
            <argument type="service" id="ecommit_util.helper"/>
            <argument type="service" id="ecommit_javascript.helper.jquery_helper"/>
            <argument type="service" id="form.factory"/>
            <argument type="service" id="router"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="twig"/>
            <argument type="service" id="ecommit_javascript.overlay"/>
            <argument type="collection">
                <argument key="use_bootstrap">%ecommit_javascript.use_bootstrap%</argument>
                <argument key="template_configuration">%ecommit_crud.template_configuration%</argument>
                <argument key="images">%ecommit_crud.images%</argument>
            </argument>
        </service>

        <service id="ecommit_crud.twig.crud_extension" class="Ecommit\CrudBundle\Twig\CrudExtension">
            <argument type="service" id="ecommit_crud.helper"/>
            <argument type="service" id="twig"/>
            <tag name="twig.extension"/>
        </service>

        <service id="ecommit_crud.event_listener.mapping_entities" class="Ecommit\CrudBundle\EventListener\MappingEntities">
            <tag name="doctrine.event_listener" event="loadClassMetadata" />
        </service>
    </services>
</container>
