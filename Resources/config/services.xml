<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  
  <parameters>
      <parameter key="ecommit_crud.helper.class">Ecommit\CrudBundle\Helper\CrudHelper</parameter>
      <parameter key="ecommit_crud.helper.twig.extension.crud.class">Ecommit\CrudBundle\Helper\Twig\CrudExtension</parameter>
      <parameter key="ecommit_crud.form.type.entity_picker.class">Ecommit\CrudBundle\Form\Type\EntityPickerType</parameter>
  </parameters>
  
  <services>
    <service id="ecommit_crud.helper" class="%ecommit_crud.helper.class%">
        <argument type="service" id="ecommit_util.helper" />
        <argument type="service" id="ecommit_javascript.manager" />
        <argument type="service" id="form.factory" />
        <argument>%ecommit_javascript.use_bootstrap%</argument>
    </service>
    <service id="ecommit_crud.helper.twig.extension.crud" class="%ecommit_crud.helper.twig.extension.crud.class%">
        <argument type="service" id="ecommit_crud.helper" />
        <argument type="service" id="twig" />
        <tag name="twig.extension" />
    </service>
    
    <service id="ecommit_crud.form.type.entity_picker" class="%ecommit_crud.form.type.entity_picker.class%">
        <argument type="service" id="ecommit_javascript.manager" />
        <argument type="service" id="doctrine" on-invalid="null" />
        <tag name="form.type" alias="entity_picker" />
    </service>
  </services>
</container>